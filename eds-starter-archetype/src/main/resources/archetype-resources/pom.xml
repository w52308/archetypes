		<!-- <dependency> <groupId>resources</groupId> <artifactId>extjs</artifactId> <version>${extjs.version}</version> </dependency> -->
		<dependency>
			<groupId>ro.isdc.wro4j</groupId>
			<artifactId>wro4j-core</artifactId>
